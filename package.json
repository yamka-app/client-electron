{
  "name": "ordermsg",
  "productName": "Order",
  "version": "0.5.0",
  "description": "A secure messenger with powerful features",
  "main": "src/js/commonjs/main/main.js",
  "scripts": {
    "build": "tsc --build ./src/tsconfig.commonjs.json & tsc --build ./src/tsconfig.esnext.json & wait",
    "watch": "tsc -w --build ./src/tsconfig.json",
    "start": "npm run build && electron .",
    "lint": "eslint -c .eslintrc --ext .ts ./src/ts",
    "dist": "npm run build && electron-builder -wl",
    "dist-hrt": "hrt-packager",
    "test_html": "electron ."
  },
  "keywords": [],
  "author": "portasynthinca3",
  "license": "MIT",
  "build": {
    "appId": "tk.ordermsg.desktopclient",
    "compression": "normal",
    "asar": true,
    "extends": null,
    "linux": {
      "target": "AppImage",
      "category": "Network",
      "icon": "src/icons/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/icons/icon.png"
    }
  },
  "hrt": {
    "appId": "tk.ordermsg.desktopclient",
    "pack": "tar-gzip",
    "electron": "9.4.0",
    "canPatch": true,
    "ignore": [
      ".*/\\..*",
      ".*/package-lock\\.json"
    ]
  },
  "dependencies": {
    "@discordjs/opus": "^0.5.0",
    "@electron/remote": "^1.0.4",
    "@types/escape-html": "^1.0.0",
    "@types/marked": "^1.2.1",
    "@types/node": "^14.14.33",
    "@types/node-microphone": "^0.1.0",
    "@types/tinycolor2": "^1.4.2",
    "@types/tmp": "^0.2.0",
    "audio-buffer": "^4.0.4",
    "audio-context": "^1.0.3",
    "audio-play": "^2.3.1",
    "audio-speaker": "^1.5.1",
    "blurhash": "^1.1.3",
    "code-prettify": "^0.1.0",
    "compare-versions": "^3.6.0",
    "escape-html": "^1.0.3",
    "highlight.js": "^10.5.0",
    "marked": "^2.0.0",
    "microphone-stream": "^5.3.1",
    "qrcode": "^1.4.4",
    "remark": "^13.0.0",
    "remark-gemoji-to-emoji": "^1.1.0",
    "smoothscroll-polyfill": "^0.4.4",
    "speaker": "^0.5.3",
    "tinycolor2": "^1.4.2",
    "tmp": "^0.2.1",
    "twemoji": "^13.0.1"
  },
  "devDependencies": {
    "electron": "^12.0.1",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.5",
    "rollup": "^2.36.2",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3"
  }
}
